<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/textView_CorrectResult"
        style="@style/MetaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct: 0"
        app:layout_constraintEnd_toStartOf="@id/textView_WrongResult"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_WrongResult"
        style="@style/MetaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong: 0"
        app:layout_constraintEnd_toStartOf="@id/textView_SkippedResult"
        app:layout_constraintStart_toEndOf="@id/textView_CorrectResult" />

    <TextView
        android:id="@+id/textView_SkippedResult"
        style="@style/MetaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skipped: 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_WrongResult" />

</android.support.constraint.ConstraintLayout>